<h1>People</h1>
<table class="table table-hover">
	<thead>
		<th>Name</th>
		<th>Birthdate</th>
	</thead>
	<tbody>
		<% @people.each do |person| %>
		<tr>
			<td>
				<a href="/people/<%= person.id %>"><%= person.first_name %> <%= person.last_name %></a>
			</td>
			<td>
				<%= Person.format_birthdate(person.birthdate) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>